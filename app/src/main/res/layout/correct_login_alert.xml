<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/redLike1"
            android:layout_width="295dp"
            android:layout_height="112dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/red_like" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="422dp"
            android:layout_height="66dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Giris Basarili"
            android:textColor="@color/alev_kirmizisi"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/redLike2"
            android:layout_width="302dp"
            android:layout_height="111dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/red_like" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Uygulamaya Yonlendiriliyorsunuz"
            android:textColor="#001D85"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/sayac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:gravity="center|top"
            android:text="3"
            android:textSize="30dp"
            android:textColor="#001D85"/>
    </LinearLayout>

</LinearLayout>